{
  "name": "NARADDON Homepage (React + Node.js)", // MongoDB는 이제 별도 서비스로 실행
  "dockerComposeFile": "docker-compose.yml", // Docker Compose 파일 지정
  "service": "app", // Docker Compose 파일에서 사용할 서비스 이름
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}", // 워크스페이스 경로

  "features": {
    "ghcr.io/devcontainers/features/node:1": { // Node.js Feature는 그대로 사용
      "version": "18"
    }
    // MongoDB Feature 및 수동 설치 postCreateCommand는 모두 제거되었습니다.
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [3000, 5000, 27017], // React 개발 서버, Express 백엔드, MongoDB 기본 포트
  "remoteUser": "node" // Node.js 이미지를 사용하므로 remoteUser를 "node"로 설정
}
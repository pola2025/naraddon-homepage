{
  "name": "NARADDON Homepage (React + Node.js + MongoDB)",
  "dockerComposeFile": "docker-compose.yml", // Docker Compose 파일 지정
  "service": "app", // docker-compose.yml에서 'app' 서비스를 메인 개발 컨테이너로 사용
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}", // 워크스페이스 경로

  // 아래 "features"는 'app' 서비스 컨테이너에 적용됩니다.
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  // postCreateCommand는 Docker Compose 서비스들이 성공적으로 시작된 후에 실행됩니다.
  // 여기서는 별도로 docker compose up을 실행할 필요 없습니다. Codespaces가 알아서 처리합니다.
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y iputils-ping dnsutils net-tools curl && echo 'Basic tools installed.'",
  "forwardPorts": [3000, 5000, 27017], // 포트 포워딩
  "remoteUser": "codespace" // Codespace의 기본 사용자. 'app' 서비스에 적용됩니다.
}
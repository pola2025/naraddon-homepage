version: '3.8'

services:
  app:
    image: mcr.microsoft.com/devcontainers/universal:2-linux
    volumes:
      - ../..:/workspaces:cached
    command: sleep infinity
    network_mode: service:db
    
  db:
    image: mongo:6.0
    restart: unless-stopped
    volumes:
      - mongodb-data:/data/db
    environment:
      MONGO_INITDB_DATABASE: naraddon

